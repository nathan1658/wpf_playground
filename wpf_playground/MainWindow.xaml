<Window x:Class="wpf_playground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_playground"
        mc:Ignorable="d"
        Title="MainWindow" Height="648" Width="570">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="729*"/>
            <ColumnDefinition Width="67*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="counter" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="398,42,330.5,42"/>
        <Grid Grid.Row="1" x:Name="gameBoard" Grid.ColumnSpan="2" Margin="0,0,0,0.5"  >
            <Canvas Background="Gray"></Canvas>
            <Grid Margin="20">
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" >
                    <local:Circle x:Name="circle1"  />
                    <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center">1</TextBlock>
                </Grid>

                <Grid HorizontalAlignment="Right" VerticalAlignment="Top" >
                    <local:Circle x:Name="circle2"  />
                    <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center">2</TextBlock>
                </Grid>
                <local:BouncingBall HorizontalAlignment="Center" VerticalAlignment="Center" />

                <Grid  HorizontalAlignment="Left" VerticalAlignment="Bottom" >
                    <local:Circle x:Name="circle3"  />
                    <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center">3</TextBlock>
                </Grid>
                <Grid  HorizontalAlignment="Right" VerticalAlignment="Bottom" >
                    <local:Circle x:Name="circle4"  />
                    <TextBlock HorizontalAlignment="Center"  VerticalAlignment="Center">4</TextBlock>

                </Grid>
                <TextBlock Background="White" VerticalAlignment="Top" HorizontalAlignment="Center" Text="{Binding Score}"></TextBlock>
            </Grid>
        </Grid>
    </Grid>
</Window>
