<Page
    x:Class="wpf_playground.UserInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    d:DesignHeight="275.08"
    d:DesignWidth="589.443"
    Title="UserInfoPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <materialDesign:Card
            Padding="32"
            Margin="16"
            Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Text="Name"
                    Grid.Row="0"
                    Grid.Column="0"></TextBlock>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="{Binding Name, UpdateSourceTrigger=LostFocus}">
                </TextBox>

                <TextBlock
                    Text="SID"
                    Grid.Row="1"
                    Grid.Column="0"></TextBlock>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding SID, UpdateSourceTrigger=LostFocus}"></TextBox>

                <TextBlock
                    Text="Age"
                    Grid.Row="2"
                    Grid.Column="0"></TextBlock>
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="{Binding Age, UpdateSourceTrigger=LostFocus}"></TextBox>

                <TextBlock
                    Text="Gender"
                    Grid.Row="3"
                    Grid.Column="0"></TextBlock>
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <RadioButton
                        GroupName="genderGroup"
                        IsChecked="{Binding MaleChecked}"
                        Content="Male">
                    </RadioButton>
                    <RadioButton
                        GroupName="genderGroup"
                        IsChecked="{Binding FemaleChecked}"
                        Content="Female">
                    </RadioButton>
                </StackPanel>


                <TextBlock
                    Text="Group"
                    Grid.Row="4"
                    Grid.Column="0"></TextBlock>
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <RadioButton
                        GroupName="testGroup"
                        IsChecked="{Binding L01Checked}"
                        Content="L01">
                    </RadioButton>
                    <RadioButton
                        GroupName="testGroup"
                        IsChecked="{Binding L02Checked}"
                        Content="L02">
                    </RadioButton>
                    <RadioButton
                        GroupName="testGroup"
                        IsChecked="{Binding L03Checked}"
                        Content="L03">
                    </RadioButton>

                </StackPanel>

                <TextBlock
                    Text="Dominant Hand"
                    Grid.Row="5"
                    Grid.Column="0"></TextBlock>
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <RadioButton
                        GroupName="dominantGroup"
                        IsChecked="{Binding LeftHandChecked}"
                        Content="Left">
                    </RadioButton>

                    <RadioButton
                        GroupName="dominantGroup"
                        IsChecked="{Binding RightHandChecked}"
                        Content="Right">
                    </RadioButton>
                    <TextBlock
                        Text="{Binding FormValid}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <materialDesign:Card
            Padding="32"
            Margin="16"
            Grid.Column="1">
            <TextBlock
                Text="{Binding UserInfo}" />
        </materialDesign:Card>

    </Grid>
</Page>
