<Window
    x:Class="wpf_playground.UserInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextElement.FontWeight="Regular"
    TextElement.FontSize="13"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    d:DesignHeight="324.58"
    d:DesignWidth="670.443"
    Title="UserInfoPage">

    <Grid>
        <materialDesign:Card
            MaxWidth="500"
            MaxHeight="400"
            Padding="32"
            Margin="16"
            Grid.Column="0">
            <Grid>
                <Grid.Resources>
                    <Style
                        TargetType="TextBlock">
                        <Setter
                            Property="Margin"
                            Value="5" />
                        <Setter
                            Property="VerticalAlignment"
                            Value="Center" />
                    </Style>
                    <Style
                        TargetType="StackPanel">
                        <Setter
                            Property="Margin"
                            Value="5" />
                    </Style>
                    <Style
                        TargetType="RadioButton">
                        <Setter
                            Property="Margin"
                            Value="5" />
                    </Style>
                    <Style
                        TargetType="TextBox">
                        <Setter
                            Property="Margin"
                            Value="5" />
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="auto" />
                    <RowDefinition
                        Height="*" />

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="auto" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Text="Name"
                    Grid.Row="0"
                    Grid.Column="0"></TextBlock>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}">
                </TextBox>

                <TextBlock
                    Text="SID"
                    Grid.Row="1"
                    Grid.Column="0"></TextBlock>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding SID, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                <TextBlock
                    Text="Age"
                    Grid.Row="2"
                    Grid.Column="0"></TextBlock>
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                <TextBlock
                    Text="Gender"
                    Grid.Row="3"
                    Grid.Column="0"></TextBlock>
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <RadioButton
                        GroupName="genderGroup"
                        IsChecked="{Binding MaleChecked}"
                        Content="Male">
                    </RadioButton>
                    <RadioButton
                        GroupName="genderGroup"
                        IsChecked="{Binding FemaleChecked}"
                        Content="Female">
                    </RadioButton>
                </StackPanel>


                <TextBlock
                    Text="Group"
                    Grid.Row="4"
                    Grid.Column="0"></TextBlock>
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <RadioButton
                        GroupName="testGroup"
                        IsChecked="{Binding L01Checked}"
                        Content="L01">
                    </RadioButton>
                    <RadioButton
                        GroupName="testGroup"
                        IsChecked="{Binding L02Checked}"
                        Content="L02">
                    </RadioButton>
                    <RadioButton
                        GroupName="testGroup"
                        IsChecked="{Binding L03Checked}"
                        Content="L03">
                    </RadioButton>

                </StackPanel>

                <TextBlock
                    Text="Dominant Hand"
                    Grid.Row="5"
                    Grid.Column="0"></TextBlock>
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    Orientation="Horizontal">

                    <RadioButton
                        GroupName="dominantGroup"
                        IsChecked="{Binding LeftHandChecked}"
                        Content="Left">
                    </RadioButton>

                    <RadioButton
                        GroupName="dominantGroup"
                        IsChecked="{Binding RightHandChecked}"
                        Content="Right">
                    </RadioButton>

                </StackPanel>
                <Button
                    IsEnabled="{Binding FormValid}"
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Command="{Binding ClickCommand}"
                    VerticalAlignment="Bottom">
                    Submit
                </Button>
            </Grid>
        </materialDesign:Card>

    </Grid>
</Window>
